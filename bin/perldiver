#!/usr/bin/perl

use strict;
use warnings;

use Getopt::Long;

use PerlDiver::Schema;
use App::PerlDiver;

my %opts;
GetOptions(\%opts, 'help|h', 'gather_only|g', 'render_only|r');

my ($gather, $render) = (1, 1);
$gather = 0 if $opts{render_only};
$render = 0 if $opts{gather_only};

die "Usage: $0 repo_owner repo_name\n" unless @ARGV == 2;

my ($owner, $name) = @ARGV;

my $sch = PerlDiver::Schema->get_schema;

my $rs = $sch->resultset('Repo');

my ($repo) = $rs->search({
  owner => $owner,
  name  => $name,
});

die unless $repo;

my $app = App::PerlDiver->new(
  repo => $repo->uri,
  gather => $gather,
  render => $render,
);

$app->run;
